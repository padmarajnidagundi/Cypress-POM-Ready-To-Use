# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# API Base URLs (optional - defaults are set in cypress.config.js)
API_URL=https://reqres.in/api
REACT_APP_URL=https://react-redux.realworld.io
EXAMPLE_URL=https://example.cypress.io
CHATGPT_URL=https://chat.openai.com
CHATGPT_API_URL=https://api.openai.com/v1

# Test Configuration
CYPRESS_BASE_URL=http://localhost:3000
CI=false

# Browser Configuration
CYPRESS_VIDEO=true
CYPRESS_SCREENSHOTS_FOLDER=cypress/screenshots
CYPRESS_VIDEOS_FOLDER=cypress/videos

# Retry Configuration
CYPRESS_RETRIES=2

# Timeout Configuration (in milliseconds)
CYPRESS_DEFAULT_COMMAND_TIMEOUT=10000
CYPRESS_PAGE_LOAD_TIMEOUT=60000
CYPRESS_REQUEST_TIMEOUT=10000
CYPRESS_RESPONSE_TIMEOUT=30000

# Reporter Configuration
CYPRESS_REPORTER=cypress-mochawesome-reporter
CYPRESS_REPORT_DIR=cypress/reports/html

# Visual Regression Configuration
VISUAL_THRESHOLD=0.1
VISUAL_REGRESSION_PATH=cypress/snapshots

# Debug Configuration
DEBUG=false
CYPRESS_DEBUG=false
